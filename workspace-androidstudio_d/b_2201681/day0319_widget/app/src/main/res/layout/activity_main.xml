<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".MainActivity">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit1"
            android:layout_span="5"
            android:hint="숫자1 입력"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:hint="숫자2 입력" />
    </TableRow>
    <TableRow
        android:layout_width="70dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn0"
            android:text="0" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:text="1" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            android:text="2" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn3"
            android:text="3" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn4"
            android:text="4" />
    </TableRow>
    <TableRow
        android:layout_width="70dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn5"
            android:text="5" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn6"
            android:text="6" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn7"
            android:text="7" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn8"
            android:text="8" />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn9"
            android:text="9" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:text="더하기" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:text="빼기" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:text="곱하기" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:text="나누기" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계산 결과 :"
            android:textSize="35sp"
            android:textColor="#ff0000"
            android:layout_span="5"
            android:id="@+id/textResult" />
    </TableRow>


</TableLayout>

